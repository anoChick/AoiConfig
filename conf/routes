# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# Tasks          
GET     /tasks                  controllers.Application.items
POST    /tasks                  controllers.Application.newItem
POST    /tasks/:id/delete       controllers.Application.deleteItem(id: Long)
POST    /tasks/:id/vote       controllers.Application.voteItem(id: Long)
POST    /tasks/:group/group       controllers.Application.group(group: Int)
  